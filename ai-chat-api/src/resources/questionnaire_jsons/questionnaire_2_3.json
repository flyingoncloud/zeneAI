  "sub_sections": [
    {
      "id": "2.3.1",
      "title": "依恋结构 (Attachment Pattern)",
      "categories": [
        {
          "name": "Secure (安全型)",
          "questions": [
            {"id": 1, "text": "我能在亲密关系中保持亲近与独立的平衡。"},
            {"id": 2, "text": "当关系出现不确定时，我能保持冷静并沟通解决。"},
            {"id": 3, "text": "我能在冲突中表达需求，而不是完全退缩或过度依赖。"}
          ]
        },
        {
          "name": "Anxious (焦虑型)",
          "questions": [
            {"id": 4, "text": "当对方没有及时回应，我会担心被忽视或拒绝。"},
            {"id": 5, "text": "我常需要反复确认对方是否在乎我。"},
            {"id": 6, "text": "我常觉得自己在关系中不够好，需要努力才能被接受。"}
          ]
        },
        {
          "name": "Avoidant (回避型)",
          "questions": [
            {"id": 7, "text": "我倾向在关系中保持距离，以避免受伤。"},
            {"id": 8, "text": "当别人过于亲近时，我会感到不自在或想退缩。"},
            {"id": 9, "text": "我更喜欢独立，不喜欢别人过多干涉我的生活。"}
          ]
        },
        {
          "name": "Disorganized (混乱型)",
          "questions": [
            {"id": 10, "text": "我在关系中常感到矛盾：既渴望亲密，又害怕靠近。"},
            {"id": 11, "text": "当关系出现问题时，我会在靠近和疏远之间反复摇摆。"},
            {"id": 12, "text": "我在亲密关系中容易情绪化，难以保持稳定。"}
          ]
        }
      ]
    },
    {
      "id": "2.3.2",
      "title": "冲突触发点 (Relational Triggers)",
      "questions": [
        {"id": 1, "text": "当别人忽视我时，我会感到强烈不安。"},
        {"id": 2, "text": "被拒绝会让我过度怀疑自己的价值。"},
        {"id": 3, "text": "当关系出现疏离，我会反复确认对方态度。"},
        {"id": 4, "text": "我容易因小的冷淡行为而情绪波动。"},
        {"id": 5, "text": "我能在冲突中保持冷静，而不是立即情绪化反应。"}
      ]
    },
    {
      "id": "2.3.3",
      "title": "共情能力 (Empathy Index)",
      "questions": [
        {"id": 1, "text": "我能敏锐感受到他人的情绪变化。"},
        {"id": 2, "text": "我能理解他人的观点，即使与我不同。"},
        {"id": 3, "text": "我会主动回应他人的情绪需求。"},
        {"id": 4, "text": "我能在共情时保持自我界限，不被情绪淹没。"},
        {"id": 5, "text": "我能在压力下仍保持对他人的理解与支持。"}
      ]
    },
    {
      "id": "2.3.4",
      "title": "内在冲突度 (Inner Conflict Level)",
      "questions": [
        {"id": 1, "text": "我在关系中常感到“想靠近又害怕受伤”。"},
        {"id": 2, "text": "我在亲密需求与独立需求之间常有拉扯。"},
        {"id": 3, "text": "我在关系决策中容易犹豫不决。"},
        {"id": 4, "text": "我能觉察到自己内在不同声音的存在。"},
        {"id": 5, "text": "我能整合冲突需求，找到平衡点。"}
      ]
    }
  ]
}
